<Window x:Class="UiClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UiClient"
        xmlns:Views="clr-namespace:UiClient.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        
        <TabControl>
            <TabItem Header="Bus" Width="70">
                <WrapPanel>
                    <Views:BusView/>
                      
                </WrapPanel>
            </TabItem>
            <TabItem Header="Driver" Width="70">
                <WrapPanel>
                    <Views:DriverView/>

                </WrapPanel>
            </TabItem>
            <TabItem Header="Line" Width="70">
                <WrapPanel>
                    <Views:LineView/>

                </WrapPanel>
            </TabItem>
            <TabItem Header="Station" Width="70">
                <WrapPanel>
                    <Views:StationView/>
                    
                </WrapPanel>
            </TabItem>
        </TabControl>
    </Grid>


</Window>
